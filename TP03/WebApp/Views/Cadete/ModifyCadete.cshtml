@{
    ViewData["Title"] = "Modificar Cadete";
}
@model WebApp.Entidades.Cadete

<div class="text-center">
    <h1 class="display-4">Alta Cadete</h1>
</div>
<form asp-action="ModifyCadete" method="post">
    <div class="col-md-6">
        <label for="nya" class="form-label">Apellido y Nombre:</label>
        <input type="text" class="form-control" name="nombre" value="@Model.Nombre" id="nya" >
    </div>
    <div class="col-md-6">
        <label for="telf" class="form-label">Telefono: </label>
        <input type="text" class="form-control" id="telf" name="telf" value="@Model.Telf" >
    </div>
    <div class="col-12">
        <label for="direccion" class="form-label">Direccion: </label>
        <input type="text" class="form-control" id="direccion" name="direccion" value="@Model.Direccion" >
    </div>
    <input hidden type="number" name="id" value="@Model.Id"/>
    <br />
    <div class="col-12">
        <button type="submit" class="btn-info btn-success btn-lg">Confirmar</button>
    </div>
</form>